<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item><!-- would be @dimen/titleStyle but gives the cannot resolve flag error-->
    </style>

    <style name="AppTheme.LongText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/longTextSize</item>
        <item name="android:lineHeight">@dimen/longTextHeight</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <!-- TODO 7: Define button_color resource. Remember, the button will have a specific color for pressed state and another one for the rest -->
        <!-- TODO 8: Once defined, uncomment the following line -->
        <item name="android:backgroundTint">@color/button_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/padding</item>
        <item name="android:paddingEnd">@dimen/padding</item>
    </style>

</resources>
